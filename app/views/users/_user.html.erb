        <h2>User info</h2>
        <table class='table'>
          <tr>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: 'default-image.jpg' %>
          </tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </table>
        
        <div class='row'>
          <%= link_to "", edit_user_path(user), class:["btn", "btn-outline-secondary", "btn-block", "fas", "fa-user-cog"] %>
        </div>
        
        <h2 class="mt-3">New place</h2>
        <%= form_with model:place, url:"/places", local:true do |f| %>
          <div class="form-group">
            <label for="title">Title</label>
            <%= f.text_field :title, class:["form-control", "place_title"], id:"place_title" %>
          </div>
          <div class="form-group">
            <label for="body">Opinion</label>
            <%= f.text_field :body, class:["form-control","place_body"], id:"place_body" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Place', class:["btn", "btn-success"] %>
          </div>
        <% end %>