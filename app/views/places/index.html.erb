<main>
  <p id="notice"><%= flash[:notice] %></p>
  
<% if @place.errors.any? %>
  <%= @place.errors.count %>件のエラーが発生しました
  <% @place.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
  
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'users/user', user: @user, place: @place %>
      </div>
      
      <div class='col-md-8 offset-md-1'>
        <h2>Places</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @places.each do |place| %>
            <tr>
              <td>
                <%= link_to user_path(place.user.id) do %>
                  <%= attachment_image_tag place.user, :profile_image, :fill, 80, 80, fallback: 'default-image.jpg' %>
                <% end %>
              </td>
              <td><%= link_to place.title, place_path(place.id) %></td>
              <td><%= place.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
    </div>
  </div>

</main>
